{
  "name": "crypto-tracker",
  "version": "1.0.0",
  "description": "Multi-chain custodial wallet API with commission system and gas tank support",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "ws-server": "node ws-server.js",
    "vercel": "node index.js",
    "seed": "node scripts/seed.js",
    "create-admin": "node scripts/create-admin.js",
    "test-wallet": "node scripts/test-wallet.js",
    "health-check": "node scripts/check-health.js",
    "generate-keys": "node scripts/generate-keys.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test:btc-ltc-doge": "jest tests/btc-ltc-doge-comprehensive.test.js",
    "test:btc-ltc-doge:phase1": "jest tests/btc-ltc-doge-comprehensive.test.js -t \"Phase 1\"",
    "test:btc-ltc-doge:phase2": "jest tests/btc-ltc-doge-comprehensive.test.js -t \"Phase 2\"",
    "test:btc-ltc-doge:phase3": "jest tests/btc-ltc-doge-comprehensive.test.js -t \"Phase 3\"",
    "test:btc-ltc-doge:phase4": "jest tests/btc-ltc-doge-comprehensive.test.js -t \"Phase 4\"",
    "test:view-wallets": "node scripts/view-test-wallets.js",
    "test:generate": "node scripts/quick-wallet-test.js",
    "test:balance": "node scripts/check-balances.js",
    "test:send": "node scripts/send-test-transaction.js",
    "test:quick": "npm run test:generate && echo '\n⏳ Now fund wallets and run: npm run test:balance'",
    "test:all-phases": "npm run test:btc-ltc-doge:phase1 && echo '\n⏸️  Fund wallets, wait 10-15 mins, then run: npm run test:continue' && exit 0",
    "test:continue": "npm run test:btc-ltc-doge:phase2 && npm run test:btc-ltc-doge:phase3 && npm run test:btc-ltc-doge:phase4"
  },
  "keywords": [
    "blockchain",
    "wallet",
    "crypto",
    "bitcoin",
    "ethereum",
    "solana",
    "custodial",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.2.0",
    "@noble/hashes": "^1.3.2",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bitcoinjs-lib": "^7.0.0",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ecpair": "^2.0.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^7.0.9",
    "ripple-keypairs": "^2.0.0",
    "serverless-http": "^4.0.0",
    "tronweb": "^6.0.4",
    "winston": "^3.18.3",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
